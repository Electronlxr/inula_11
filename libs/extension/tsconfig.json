{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"]
    }
  },
  "includes": [
    "./src/index.d.ts", "./src/*/*.ts", "./src/*/*.tsx"
  ]
}